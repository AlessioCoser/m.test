#!/usr/bin/env sh

set -e

while [[ $# -gt 0 ]]; do
  flag="$1"
  case $flag in
      help|-h|--help)
        cat $PWD/man/m.test.1
        exit 0
      ;;
      version|-v|--version)
        node -pe "require('./package.json').version"
        exit 0
      ;;
      -p|--parallel)
        PARALLEL="$2"
        shift
      ;;
      *)
        SUITE="$SUITE $1"
      ;;
  esac
  shift
done

find ${SUITE:-test} -type f | xargs -n 1 -P ${PARALLEL:-1} node --require ../globals
